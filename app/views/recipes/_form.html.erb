<%= form_for @recipe do |f| %>
  <fieldset>
  <%= f.label :title %>
  <%= f.text_field :title %>
</fieldset>
<fieldset>
  <%= f.label :description %>
  <%= f.text_field :description %>
</fieldset>
<fieldset>
  <%= f.label :instructions %>
  <%= f.text_field :instructions %>
</fieldset>
<section>
  <%= f.submit %>
  <%= link_to :back %>
</section>
<% end %>
